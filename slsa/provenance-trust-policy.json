      "required": false
    },
    {
      "id": "builder-id-hetzner",
      "description": "Built on Hetzner CI dev, prod or release",
      "cel": "predicate.runDetails.builder.id in [ 'https://ci-dev.vedenemo.dev/', 'https://ci-prod.vedenemo.dev/', 'https://ci-release.vedenemo.dev/' ]",
      "required": false
    },
    {
      "id": "built-recently",
      "description": "Build was finished less than 2 hours ago",
      "cel": "now - timestamp(predicate.runDetails.metadata.finishedOn) < duration('2h')",
      "required": true
    }
